@model DriveWorks_MVC.Models.ViewModels.HomeViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Car Brand and Model</title>

    <!-- Link to external CSS file in wwwroot -->
    <link rel="stylesheet" href="~/css/Index.css">

    <!-- Font Awesome for the check-circle icon (if you need it for other views) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Optionally, include a favicon here -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <!-- You can also add other meta tags here like description, author, etc. -->
    <meta name="description" content="Select car brand and model for your purchase">
</head>
<body>

    <!-- Main Container for the form -->
    <div class="container">
        <div class="form-container">
            <form method="post" asp-controller="Home" asp-action="GetCarPartsByModel">
                <h2>Select Car Brand and Model</h2>

                <!-- Select for Car Brands -->
                <div class="form-group">
                    <label for="brandSelect">Car Brand</label>
                    <select id="brandSelect" class="form-control" required>
                        <option value="" selected disabled>Select a brand</option>
                        @foreach (var brand in Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    </select>
                </div>

                <!-- Select for Car Models (will be populated based on selected brand) -->
                <div class="form-group">
                    <label for="modelSelect">Car Model</label>
                    <select id="modelSelect" class="form-control" name="SelectedModelId" asp-for="@Model.SelectedModelId" required>
                        <option value="" selected disabled>Select a model</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <!-- Optional Scripts section -->
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/js/brandModelSelector.js"></script> <!-- Link to external JS file for dynamic brand/model select -->
    }

</body>
</html>
